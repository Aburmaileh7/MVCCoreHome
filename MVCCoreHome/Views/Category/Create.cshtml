@model MVCCoreHome.Models.Category

@{
    ViewBag.ActionName = Model == null ? "Create" : "Edit";
    ViewData["Title"] = ViewBag.ActionName +" Category";

}

<h1>@ViewBag.ActionName</h1>

<div class="row">
    <div class="col-md-4">
        <form action="@ViewBag.ActionName">
            <label asp-for="id" class="control-label"></label>
            <input asp-for="id" class="form-control" />
            
            <label asp-for="Name" class="control-label"></label>
            <input asp-for="Name" class="form-control" />
           <br />
            <input type="submit" value="Save" class="btn btn-primary" />

            <a asp-action="Index" class="btn btn-danger">Back to List</a>
        </form>

    </div>
</div>

